<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@drawable/selector_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LoadingLayoutStyle">
        <item name="error_text">error</item>
        <item name="empty_text">empty</item>
        <item name="loading_text">loading...</item>
        <item name="text_size">15sp</item>
        <item name="empty_image">@drawable/ic_empty2</item>
        <item name="error_image">@drawable/ic_warning2</item>
        <item name="loading_drawable">@drawable/ic_refresh2</item>
    </style>

</resources>